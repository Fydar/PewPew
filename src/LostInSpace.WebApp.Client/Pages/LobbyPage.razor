@page "/"
@page "/lobby"

@using HuskyNet.WebClient.Services;

@if (ClientService.View != null)
{
	<div>
		<h3>Players</h3>
		@if (ClientService.View.Lobby != null)
		{
			@foreach (var player in ClientService.View.Lobby.Players)
			{
				<p>@player.Value.DisplayName (@player.Key)</p>
			}
		}
	</div>
}
else
{
	var rand = new Random();

	<h1>Connecting...</h1>

	<div style="overflow: hidden; flex-grow: 1; width: 100%; height: 512px;">

		<div id="zoomcanvasid" style="height: 100%;">

			@for (int i = 0; i < 50; i++)
			{
				<div class="player" style="top: @(rand.Next(0, 512))px; left: @(rand.Next(0, 512))px;">

				</div>
			}

		</div>

	</div>
}


